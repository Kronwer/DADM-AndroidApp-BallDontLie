<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp"
    android:outlineSpotShadowColor="@color/black"
    app:cardCornerRadius="20dp"
    app:cardElevation="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="10dp">
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textViewTeamFullName"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="start|center_vertical"
            android:minHeight="42dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/textViewTeamName"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Item" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textViewTeamName"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="start|center_vertical"
            android:minHeight="42dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewTeamFullName"
            tools:text="Item"
            android:textStyle="italic"/>
    </LinearLayout>


    <ImageView
        android:id="@+id/imageViewTeam"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="right"/>

    <ImageButton
        android:id="@+id/imageButtonFavTeams"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|center_vertical"
        android:background="@color/white"
        android:layout_marginRight="10dp"
        android:src="@drawable/ic_bx_heart" />


</androidx.cardview.widget.CardView>